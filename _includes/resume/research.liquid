<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign research = data[1] | sort: 'startDate' | reverse %}

  {% for content in research %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date = startDate | append: ' - ' | append: endDate %}
          {% else %}
            {% assign date = '' %}
          {% endif %}

          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date and date != '' %}
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                      {{ date }}
                    </span>
                  {% endif %}
                </td>
              </tr>

              {% if content.location and content.location != '' %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          {%- comment -%}
            Title line: role/position (clickable if url exists)
          {%- endcomment -%}
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url and content.url != '' %}
              <a href="{{ content.url }}" target="_blank" rel="noopener noreferrer">{{ content.position }}</a>
            {% else %}
              {{ content.position }}
            {% endif %}
          </h6>

          {%- comment -%}
            Organization line: lab / institution / group name
          {%- endcomment -%}
          {% if content.name and content.name != '' %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.name }}</h6>
          {% endif %}

          {%- comment -%}
            Optional short summary (NOT italic if you don't want it)
          {%- endcomment -%}
          {% if content.summary and content.summary != '' %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          {% endif %}

          {%- comment -%}
            Bullet highlights
          {%- endcomment -%}
          {% if content.highlights and content.highlights.size > 0 %}
            <ul class="items ml-1 ml-md-4">
              {% for item in content.highlights %}
                <li><span class="item">{{ item }}</span></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>

